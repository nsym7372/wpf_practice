            --><!-- インデクサー --><!--
            <TextBlock Text="{Binding Contents[1].URL}"/>

            --><!-- 添付プロパティ --><!--
            <TextBlock Text="{Binding ElementName=panel, Path=(Canvas.Left)}"/>

        </StackPanel>-->
    </Grid>
</Window>
