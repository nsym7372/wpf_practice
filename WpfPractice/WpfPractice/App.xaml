<Application x:Class="WpfPractice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfPractice"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="appBackground" Color="Orange" />
        <SolidColorBrush x:Key="appForeground" Color="Gray" />

        <Style TargetType="Label">
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="Foreground" Value="DarkBlue" />
            <Setter Property="FontSize" Value="30" />
        </Style>

        <Style TargetType="Button" x:Key="baseButtonStyle">
            <Setter Property="Background" Value="Blue" />
            <Setter Property="Foreground" Value="Yellow" />
            <Setter Property="FontSize" Value="30" />
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource baseButtonStyle}">
        </Style>

        <Style TargetType="Button" x:Key="fontButtonStyle">
            <Setter Property="FontFamily" Value="Segoe Print" />
        </Style>
        
    </Application.Resources>
</Application>
