<Page x:Class="WpfPractice2.Design.StyleSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPractice2.Design"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StyleSample">
    <Page.Resources>
        <!--継承元-->
        <Style x:Key="DefaultTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Meiryo UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        
        <!--継承先-->
        <Style x:Key="TitleTextStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DefaultTextStyle}">
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="FontSize" Value="24" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Blue" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <StackPanel Orientation="Vertical">
        <TextBlock Text="タイトル" Style="{StaticResource TitleTextStyle}" />
        <TextBlock Text="デフォルト" Style="{StaticResource DefaultTextStyle}" />
    </StackPanel>
</Page>
